<Window x:Class="StoreWPF.Cart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreWPF"
        mc:Ignorable="d"
        Title="Cart" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="191*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="143*"/>
                <ColumnDefinition Width="657*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="cartName" Grid.Column="0" Content="Корзина" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="89*"/>
                <ColumnDefinition Width="11*"/>
            </Grid.ColumnDefinitions>
            <ListView x:Name="listViewCart"/>
            <Button x:Name="Buy" Content="Купить" Grid.Column="1" VerticalAlignment="Bottom"/>
        </Grid>
    </Grid>
</Window>
